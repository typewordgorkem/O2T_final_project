<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/buttonToggleLEDs"
        android:layout_marginTop="13dp"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:text="Toggle LEDs"
        android:onClick="toggleLEDs" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="Enter text to display on LEDs"
        android:minHeight="48dp"
        android:inputType="text"/>

    <Button

        android:id="@+id/sendButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Send text to LEDs" />

    <Button
        android:id="@+id/colorPickerButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Select text color" />

    <Button
        android:id="@+id/animationButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:text="Start Animation" />

    <Button
        android:id="@+id/snakeGameButton"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:text="Open Snake Game" />



</LinearLayout>
